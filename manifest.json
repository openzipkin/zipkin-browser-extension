{
  "manifest_version": 2,
  "name": "Zipkin Browser Extension",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
