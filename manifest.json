{
  "manifest_version": 2,
  "name": "Zipkin Browser Extension",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.bundle.js"
    ],
    "persistent": true
  },
  "icons": {
    "48": "icon64.png"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
